// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum EmailCheck {
  CKECKED
  UNCHECKED
}

model User {
  id               String             @id @default(uuid())
  name             String
  lastname         String
  password_hash    String
  email            String             @unique
  github           String?
  cretated_at      DateTime           @default(now())
  modified_at      DateTime?
  role             Role               @default(MEMBER)
  email_status     EmailCheck         @default(UNCHECKED)
  Answer           Answer[]
  Question         Question[]
  UserTechnologie  UserTechnologie[]
  FavoriteQuestion FavoriteQuestion[]

  @@map("users")
}

model Question {
  id               String             @id @default(uuid())
  title            String
  content          String
  likes            Int
  saved            Int
  shared           Int
  cretated_at      DateTime           @default(now())
  modified_at      DateTime?
  user_id          String
  question         User               @relation(fields: [user_id], references: [id])
  Answer           Answer[]
  FavoriteQuestion FavoriteQuestion[]

  @@map("questions")
}

model Answer {
  id           String    @id @default(uuid())
  content      String
  likes        Int
  cretated_at  DateTime  @default(now())
  modified_at  DateTime?
  question_id  String
  question     Question  @relation(fields: [question_id], references: [id])
  user_id      String
  user         User      @relation(fields: [user_id], references: [id])
  parent_id    String    @default(uuid())
  parent       Answer?   @relation("ChildAnswers", fields: [parent_id], references: [id])
  childAnswers Answer[]  @relation("ChildAnswers")

  @@map("answers")
}

model Technologie {
  id              String            @id @default(uuid())
  name            String
  UserTechnologie UserTechnologie[]

  @@map("technologies")
}

model UserTechnologie {
  id             String      @id @default(uuid())
  user_id        String
  technologie_id String
  created_at     DateTime    @default(now())
  user           User        @relation(fields: [user_id], references: [id])
  technologie    Technologie @relation(fields: [technologie_id], references: [id])

  @@map("usersTechnologies")
}

model FavoriteQuestion {
  id          String   @id @default(uuid())
  user_id     String
  question_id String
  created_at  DateTime @default(now())
  user        User     @relation(fields: [user_id], references: [id])
  question    Question @relation(fields: [question_id], references: [id])

  @@map("favoritesQuestions")
}
